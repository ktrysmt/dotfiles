# Common packages for all platforms
# Usage: brew bundle --file=Brewfile.common
#
# NOTE: Tools managed by mise are NOT listed here.
# See mise/config.toml for: neovim, ripgrep, fzf, fd, bat, eza,
#                           gh, ghq, delta, jq, glow, xh, uv,
#                           golangci-lint, pnpm, ruff, nodejs, go, bun,
#                           difftastic, peco, procs, yazi, jnv, tmux,
#                           diff-so-fancy, gemini-cli

# Core system tools
brew "coreutils"
brew "curl"
brew "git"
brew "tree"
brew "watch"
brew "wget"
brew "csvlens"

# Development tools (not available in mise)
brew "fzy"
brew "git-secrets"
brew "llvm"
brew "nkf"
brew "tig"
brew "universal-ctags"

# mise itself
brew "mise"
